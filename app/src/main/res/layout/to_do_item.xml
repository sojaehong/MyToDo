<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/completed_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/completedBackColor">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:rotation="8"
                    android:text="@string/completed"
                    android:textColor="@color/completedTextColor"
                    android:textSize="38dp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/down_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:id="@+id/count_down_button"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/tran"
                            android:padding="0dp"
                            app:icon="@drawable/ic_remove_red_30dp"
                            app:iconTint="@color/bRed"
                            app:iconGravity="textStart"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/text_view_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/count_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|center_horizontal"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/to_do_title_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/note_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|center_horizontal"
                            android:textSize="10dp"
                            android:text=" "/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/up_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_weight="1">

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:id="@+id/count_up_button"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/tran"
                            android:padding="0dp"
                            app:icon="@drawable/ic_add_blue_30dp"
                            app:iconTint="@color/orientarBlue"
                            app:iconGravity="textStart"
                            />

                    </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>